<%- include('../partials/header')%>

<section id="edit-form" class="container-fluid">
  <h2>Edit Recipe</h2>
  <form action="/recipes/<%=recipe._id %>?_method=PUT" method="POST">
    <label
      >Name: <input type="text" name="name" value="<%= recipe.name%>" /> </label
    ><br />
    <label
      >Ingredients:
      <textarea
        type="text"
        name="ingredients"
        value="<%= recipe.ingredients %>"
      ></textarea></label
    ><br />

    <label
      >Instructions:
      <textarea
        type="text"
        name="instructions"
        value="<%= recipe.instructions%>"
      ></textarea></label
    ><br />
    <button type="submit">Save</button>
  </form>
</section>

<%- include('../partials/footer')%>
