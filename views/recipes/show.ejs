<%- include('../partials/header') %>

<section id="detail-page">
  <div>Name</div>
  <th><%= recipe.name %></th>
  <div>Ingredients:</div>
  <th><%=recipe.ingredients %></th>
  <div>Instructions:</div>
  <th><%= recipe.instructions %></th>
</section>
  <% if (user) { %>
  <form
    id="add-review"
    method="POST"
    action="/recipes/<%= recipe._id %>/reviews">
    <div>Reviews:</div>
    <input type="text" name="content">
    <div>Rating:</div>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value="Add Review" />
</form>
<% } %>
<section id="reviews-form">
    <div>Reviews</div>
    <% if (recipe.reviews.length) { %>
    <table>
      <thead>
        <tr>
         
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        
        <% let total = 0 %> <% recipe.reviews.forEach(function(r) { %> <% total
        += r.rating %>
       
        <tr>
         
          <td class="review-user">
            <img
              alt="avatar"
              src="<%= r.userAvatar %>"
              referrerpolicy="no-referrer"
            /><%= r.userName %>
          </td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit"><strong>X</strong></button>
              </form>
              <%} %>
            </td>
        
          </td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td>
            <strong><%= (total / recipe.reviews.length).toFixed(1)%></strong>
          </td>
        </tr>
      </tbody>
    </table>
    <% } else { %>
    <h4>No Reviews Yet</h4>
    <% } %> 
  </section>
 
<%- include('../partials/footer') %>
